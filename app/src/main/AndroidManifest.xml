<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.pelitabangsa.homeproject">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeProject">
        <activity android:name=".HomeActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity android:name=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
            <intent-filter>
                <action android:name="android.intent.action.START" />

                <category android:name="android.intent.category.START" />
            </intent-filter>
        </activity>
        <activity android:name=".SigninActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SIGN" />

                <category android:name="android.intent.category.SIGN" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
            <intent-filter>
                <action android:name="android.intent.action.REG" />

                <category android:name="android.intent.category.REG" />
            </intent-filter>
        </activity>
    </application>

</manifest>